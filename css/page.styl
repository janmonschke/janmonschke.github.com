// === BASIC ===
header-base()
  font-family: 'Rambla', sans-serif
  font-weight: bold
  padding: 5px 0px
  margin: 10px 0px

body
  font-family: Helvetica
  background-color: transparent
  color: #444

h1
  header-base()

h2
  header-base()

h3
  header-base()

h4
  header-base()
  
h5
  header-base()

p 
  line-height: 1.4
  font-size: 16px
  margin: 1em 0em

article 
  margin: 1em 0em

p code
  padding 1px
  margin 2px

pre
  background-color rgba(0, 0, 0, .02)
  border 1px solid rgba(0, 0, 0, .3)
  border-radius 3px
  overflow-x hidden
  padding 5px
  font-size 12px
  font-family Monaco, "Courier New", monospace
  font-weight normal
  line-height 1.3

pre code
  box-shadow none

a
  text-decoration: none
  color: MY_ORANGE
  text-decoration: underline
  transition(color .2s linear)

  img
    padding-bottom .5em
    border-bottom 1px solid MY_ORANGE
    transition(border .2s linear)

a:visited
  color: MY_ORANGE

a:hover 
  color: darken(MY_ORANGE, 20)

  img
    border-bottom-color MY_GREY

a.first 
  margin-left: 15px

img
  @extend img.scale-with-grid

ul
  list-style: square outside

li p
  margin 0
  padding 0

ol li ul
  margin 0

ol, ul, ol li ul
  margin-left 2em