// === BASIC ===
header-base()
  font-family: 'Rambla', sans-serif
  font-weight: bold
  padding: 5px 0px
  margin: 10px 0px

body
  font-family: Helvetica
  background-color: #eee
  color: #444

h1
  header-base()

h2
  header-base()

h3
  header-base()

h4
  header-base()
  
h5
  header-base()

p 
  line-height: 1.4
  font-size: 18px
  margin: 1em 0em

article 
  margin: 1em 0em

code, pre
  box-shadow 0 0 0 4px rgba(0, 0, 0, 0.03) inset, 0 0 0 1px rgba(0,0,0,0.15)
  border-radius 3px

p code
  padding 1px
  margin 2px

pre
  background: #fff
  padding: 5px
  font-size: 12px
  font-family: Monaco, "Courier New", monospace
  font-weight: normal
  line-height: 1.3

pre code
  box-shadow none

a
  text-decoration: none
  color: MY_ORANGE
  text-decoration: underline
  transition(color .2s linear)

a:visited
  color: MY_ORANGE

a:hover 
  color: darken(MY_ORANGE, 20)

a.first 
  margin-left: 15px

img 
  border-left: 7px solid MY_ORANGE

img:hover 
  border-left: 7px solid MY_GREY
  transition(border-left 0.3s linear)
  
ul
  list-style: square outside

li p
  margin 0
  padding 0

ol li ul
  margin 0

ol, ul, ol li ul
  margin-left 2em